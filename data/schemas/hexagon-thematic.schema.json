{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PrimalMyst Hexagonal Thematic Structure",
  "description": "The core hexagonal schema that organizes all major game systems around a six-point thematic structure",
  "type": "object",
  "properties": {
    "hexagon_id": {
      "type": "string",
      "description": "Unique identifier for this hexagonal structure"
    },
    "name": {
      "type": "string",
      "description": "Display name for this hexagonal structure"
    },
    "description": {
      "type": "string",
      "description": "Description of how this hexagon organizes thematic elements"
    },
    "center": {
      "type": "object",
      "description": "The central element that all six points relate to",
      "properties": {
        "element": {"type": "string"},
        "description": {"type": "string"}
      },
      "required": ["element", "description"]
    },
    "corners": {
      "type": "array",
      "description": "The six points of the hexagon, ordered clockwise from top",
      "minItems": 6,
      "maxItems": 6,
      "items": {
        "type": "object",
        "properties": {
          "position": {
            "type": "integer",
            "minimum": 1,
            "maximum": 6,
            "description": "Position in the hexagon (1=top, clockwise)"
          },
          "primary_concept": {
            "type": "string",
            "description": "The main concept at this corner"
          },
          "overlays": {
            "type": "object",
            "description": "Different systems that map to this corner",
            "properties": {
              "damage_type": {"type": "string"},
              "eldritch_god": {"type": "string"},
              "god_tier": {"type": "string", "enum": ["fundamental", "primal"]},
              "realm": {"type": "string"},
              "yggdrasil_branch": {"type": "string"},
              "primary_attribute": {"type": "string"},
              "secondary_attribute": {"type": "string"},
              "defense_type": {"type": "string"},
              "armor_preference": {"type": "string"},
              "thematic_color": {"type": "string"},
              "elemental_association": {"type": "string"}
            }
          },
          "relationships": {
            "type": "object",
            "properties": {
              "adjacent_corners": {
                "type": "array",
                "items": {"type": "integer"},
                "minItems": 2,
                "maxItems": 2,
                "description": "The two adjacent corner positions"
              },
              "opposite_corner": {
                "type": "integer",
                "description": "The directly opposite corner position"
              },
              "synergies": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Gameplay elements that synergize with adjacent corners"
              },
              "conflicts": {
                "type": "array", 
                "items": {"type": "string"},
                "description": "Gameplay elements that conflict with opposite corner"
              }
            }
          }
        },
        "required": ["position", "primary_concept", "overlays"]
      }
    },
    "hexagon_dynamics": {
      "type": "object",
      "description": "How the hexagonal structure creates gameplay dynamics",
      "properties": {
        "adjacency_bonuses": {
          "type": "string",
          "description": "Benefits for combining adjacent elements"
        },
        "opposition_tensions": {
          "type": "string", 
          "description": "Challenges or conflicts between opposite elements"
        },
        "full_cycle_effects": {
          "type": "string",
          "description": "Special effects for engaging with all six elements"
        }
      }
    },
    "lore_integration": {
      "type": "object",
      "description": "How this hexagon connects to the game's lore and mythology",
      "properties": {
        "mythological_basis": {"type": "string"},
        "cosmic_significance": {"type": "string"},
        "divine_connections": {"type": "string"}
      }
    }
  },
  "required": ["hexagon_id", "name", "description", "center", "corners"]
}
