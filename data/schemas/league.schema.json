{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PrimalMyst Reality Instance System",
  "description": "Schema for reality instances in PrimalMyst - the fundamental containers within which all existence and events occur. Only Myrielle exists outside these instances.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the league"
    },
    "name": {
      "type": "string",
      "description": "Display name of the league"
    },
    "type": {
      "type": "string",
      "enum": ["current", "standard-eternal", "offline-eternal", "hardcore", "event", "experimental"],
      "description": "Type of league"
    },
    "status": {
      "type": "string",
      "enum": ["active", "ended", "upcoming", "archived"],
      "description": "Current status of the league"
    },
    "duration": {
      "type": "object",
      "properties": {
        "start_date": {
          "type": "string",
          "format": "date-time",
          "description": "When the league starts"
        },
        "end_date": {
          "type": "string",
          "format": "date-time",
          "description": "When the league ends (null for permanent leagues)"
        },
        "planned_duration": {
          "type": "string",
          "description": "Planned duration (e.g., '3 months', 'permanent')"
        }
      },
      "required": ["start_date"]
    },
    "world_state": {
      "type": "object",
      "properties": {
        "reality_instance": {
          "type": "string",
          "description": "Identifier for this specific reality instance"
        },
        "reset_conditions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "What triggers transition to new reality instance"
        },
        "persistent_elements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "What carries over between reality instances"
        },
        "unique_features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "feature": {
                "type": "string",
                "description": "Name of the unique feature"
              },
              "description": {
                "type": "string",
                "description": "How this feature works in this reality instance"
              },
              "impact": {
                "type": "string",
                "description": "How this affects gameplay and world experience"
              }
            }
          }
        }
      }
    },
    "character_progression": {
      "type": "object",
      "properties": {
        "starting_state": {
          "type": "string",
          "enum": ["fresh", "migrated", "inherited"],
          "description": "How characters begin in this league"
        },
        "starting_rank_level": {
          "type": "object",
          "properties": {
            "rank": {
              "$ref": "rank-level-system.schema.json#/definitions/rank",
              "description": "Starting rank for new characters"
            },
            "level": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "description": "Starting level for new characters"
            },
            "heritage_state": {
              "type": "string",
              "enum": ["dormant", "awakening", "revealed"],
              "description": "Initial heritage awakening state"
            }
          },
          "required": ["rank", "level", "heritage_state"]
        },
        "progression_modifiers": {
          "type": "object",
          "properties": {
            "experience_multiplier": {
              "type": "number",
              "minimum": 0.1,
              "maximum": 10.0,
              "description": "Experience gain modifier for this league"
            },
            "rank_progression_speed": {
              "type": "string",
              "enum": ["slow", "normal", "fast", "accelerated"],
              "description": "How quickly players advance in rank"
            },
            "level_cap": {
              "type": "integer",
              "minimum": 10,
              "maximum": 100,
              "description": "Maximum level achievable in this league"
            },
            "heritage_unlock_requirements": {
              "type": "object",
              "properties": {
                "modified": {
                  "type": "boolean",
                  "description": "Whether heritage unlock requirements are different"
                },
                "details": {
                  "type": "string",
                  "description": "Description of modified requirements"
                }
              }
            }
          }
        },
        "progression_type": {
          "type": "string",
          "enum": ["temporary", "permanent", "hybrid"],
          "description": "Whether progress is temporary or permanent"
        },
        "migration_rules": {
          "type": "object",
          "properties": {
            "eligible_characters": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Which characters can migrate to permanent leagues"
            },
            "migration_trigger": {
              "type": "string",
              "description": "What causes migration to permanent league"
            },
            "items_transferred": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "What items/progress transfers"
            }
          }
        }
      }
    },
    "economy": {
      "type": "object",
      "properties": {
        "currency_system": {
          "type": "string",
          "enum": ["isolated", "shared", "hybrid"],
          "description": "How currency is handled"
        },
        "trade_availability": {
          "type": "boolean",
          "description": "Whether trading is available"
        },
        "market_reset": {
          "type": "boolean",
          "description": "Whether market resets with league"
        }
      }
    },
    "endgame_access": {
      "type": "object",
      "properties": {
        "access_requirements": {
          "type": "object",
          "properties": {
            "minimum_rank": {
              "$ref": "rank-level-system.schema.json#/definitions/rank",
              "description": "Minimum rank to access endgame content"
            },
            "minimum_level": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "description": "Minimum level to access endgame content"
            },
            "story_progression": {
              "type": "integer",
              "minimum": 0,
              "maximum": 4,
              "description": "Required story act completion (0=prologue, 4=epilogue)"
            },
            "heritage_requirements": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["none", "primal", "divine", "eldritch", "cosmic"]
              },
              "description": "Required heritage awakening levels"
            }
          },
          "required": ["minimum_rank", "minimum_level"]
        },
        "final_boss": {
          "type": "string",
          "description": "ID of the league's final boss encounter"
        },
        "completion_rewards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "reward_type": {
                "type": "string",
                "enum": ["migration", "cosmetic", "achievement", "unlock"],
                "description": "Type of reward"
              },
              "description": {
                "type": "string",
                "description": "Description of the reward"
              }
            }
          }
        },
        "post_completion": {
          "type": "string",
          "description": "What happens after completing final boss"
        }
      }
    },
    "lore_integration": {
      "type": "object",
      "properties": {
        "narrative_theme": {
          "type": "string",
          "description": "The main narrative theme of this reality instance"
        },
        "cosmological_explanation": {
          "type": "string",
          "description": "How this reality instance fits within Myrielle's guidance and the greater cosmology"
        },
        "world_changes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "How this reality instance differs from others"
        },
        "myrielle_role": {
          "type": "string",
          "description": "How Myrielle influences or guides this reality instance"
        }
      }
    },
    "technical_details": {
      "type": "object",
      "properties": {
        "server_type": {
          "type": "string",
          "enum": ["online", "offline", "hybrid"],
          "description": "Server architecture"
        },
        "data_persistence": {
          "type": "string",
          "description": "How character/world data is stored"
        },
        "sync_requirements": {
          "type": "string",
          "description": "Online connectivity requirements"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "author": {
          "type": "string",
          "description": "Content creator/author"
        },
        "version": {
          "type": "string",
          "description": "Content version"
        },
        "canonical": {
          "type": "boolean",
          "description": "Whether this is official canonical content"
        }
      },
      "required": ["created", "last_updated", "canonical"]
    }
  },
  "required": ["id", "name", "type", "status", "duration", "metadata"],
  "additionalProperties": false
}



