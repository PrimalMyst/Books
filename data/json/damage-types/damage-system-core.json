{
  "system_id": "damage-system-core",
  "name": "PrimalMyst Core Damage System",
  "description": "The fundamental damage calculation system based on the hexagonal positioning of damage types. This system defines the mathematical relationships between all damage types in PrimalMyst, using hexagonal distance calculations to determine effectiveness multipliers.",
  "version": "1.0",
  "canonical_reference": "data/json/lore/core-thematic-hexagon.json",
  "system_overview": {
    "principle": "Hexagonal Opposition System",
    "foundation": "Damage effectiveness is determined by the hexagonal distance between damage types in the core thematic hexagon",
    "balance_philosophy": "Creates strategic rock-paper-scissors relationships while maintaining smooth progression curves",
    "lore_integration": "Reflects the cosmic structure of Yggdrasil and divine relationships between the Eldritch Pantheon"
  },
  "core_formula": {
    "base_formula": "damagetype_mult = 1 + typemult * effectiveness_step",
    "parameters": {
      "effectiveness_step": 0.33,
      "typemult_calculation": "hexagonal_distance_between_positions",
      "position_reference": "core-thematic-hexagon.json positions 1-6"
    },
    "effectiveness_tiers": {
      "maximum_advantage": {
        "value": 1.99,
        "typemult": 3,
        "description": "Opposite damage types (3 positions apart)",
        "examples": ["Fire→Radiance", "Lightning→Chaos", "Cold→Physical"]
      },
      "strong_advantage": {
        "value": 1.66,
        "typemult": 2,
        "description": "Skip-one clockwise (2 positions apart)",
        "examples": ["Fire→Lightning", "Physical→Cold", "Chaos→Physical"]
      },
      "moderate_advantage": {
        "value": 1.33,
        "typemult": 1,
        "description": "Adjacent clockwise (1 position apart)",
        "examples": ["Fire→Physical", "Lightning→Radiance", "Cold→Chaos"]
      },
      "neutral": {
        "value": 1.0,
        "typemult": 0,
        "description": "Self-targeting (same damage type)",
        "examples": ["Fire→Fire", "Lightning→Lightning", "Cold→Cold"]
      },
      "moderate_disadvantage": {
        "value": 0.67,
        "typemult": -1,
        "description": "Adjacent counter-clockwise (1 position back)",
        "examples": ["Fire→Chaos", "Physical→Fire", "Lightning→Physical"]
      },
      "strong_disadvantage": {
        "value": 0.34,
        "typemult": -2,
        "description": "Skip-one counter-clockwise (2 positions back)",
        "examples": ["Fire→Cold", "Physical→Chaos", "Lightning→Fire"]
      }
    }
  },
