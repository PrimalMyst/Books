  "implementation_guidelines": {
    "calculation_order": [
      "1. Determine attacker damage type position (1-6)",
      "2. Determine defender damage type resistance position (1-6)",
      "3. Calculate hexagonal distance (clockwise, wrapping at 6)",
      "4. Convert distance to typemult (-2, -1, 0, 1, 2, 3)",
      "5. Apply formula: 1 + typemult * 0.33",
      "6. Apply result as damage multiplier"
    ],
    "distance_calculation": {
      "method": "Minimum path around hexagon",
      "wrapping": "Position 6 wraps to position 1",
      "direction_priority": "Clockwise positive, counter-clockwise negative",
      "opposite_handling": "Distance 3 always results in maximum effectiveness (1.99x)"
    },
    "validation_checks": [
      "All effectiveness values must be within 0.34x to 1.99x range",
      "Matrix must be asymmetric (attacker vs defender matters)",
      "Self-targeting must always equal 1.0x",
      "Opposite pairs must always equal 1.99x",
      "Adjacent pairs must follow 1.33x/0.67x pattern"
    ]
  },
